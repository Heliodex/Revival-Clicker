{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"indentWidth": 4
	},
	"files": {
		"ignore": ["*.svelte"]
	},
	"linter": {
		"rules": {
			"nursery": {
				"all": true,
				"noUndeclaredDependencies": "off",
				"noNodejsModules": "off",
				"noConsole": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingComma": "es5",
			"arrowParentheses": "asNeeded"
		}
	}
}
