:root
	@apply bg-neutral-950
	color white

body
	margin 0
	padding 1rem
	display flex
	flex-direction column
	height 100vh
	flex 1 0 auto

*
	box-sizing border-box
	font-family sans-serif

.box
	@apply bg-neutral-800 border border-solid border-neutral-700
	padding 0.75rem
	border-radius 0.5rem
	width 18rem

input
	@apply border-none outline-none text-base

button
	transition all 0.2s ease-in-out
	cursor pointer
	border none